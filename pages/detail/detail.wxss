/*  倒计时  */

page {
  background-color: #f5f1f2;
  height: 1300rpx;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #f5f1f2;
  z-index: 9999;
  top: 0;
  left: 0;
  opacity: 1;
}

.takeorder {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0.6;
  background-position: center;
  background-size: cover;
}

view.animate {
  background: rgba(251, 198, 71, 0.2);
  border: 4rpx solid #fbc647;
  height: 400rpx;
  width: 400rpx;
  border-radius: 50%;
  margin: 0 auto;
  margin-top: 80px;
}

view.wait {
  width: 45%;
  height: 50px;
  border: 1px solid #e3e3e3;
  background-color: #fff;
  border-top-left-radius: 25px;
  border-top-right-radius: 25px;
  border-bottom-left-radius: 25px;
  border-bottom-right-radius: 25px;
  text-align: center;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 110px;
}

view.info {
  font-size: 14px;
  font-weight: bolder;
  margin-top: 5px;
}

view.taketime {
  font-size: 12px;
}

button.cancle {
  width: 40%;
  position: absolute;
  margin-top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 14px;
  font-weight: bolder;
  color: #9fa0a5;
  border: none;
  background-color: #161525;
  letter-spacing: 4rpx;
}

view.careNote {
  color: #333;
  position: absolute;
  bottom: 10%;
  font-size: 26rpx;
  width: 60%;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(251, 198, 71, 0.8);
  padding: 20rpx;
  border-radius: 20rpx;
}

button.cancle::after {
  border: none;
}

.show-btn {
  margin-top: 100rpx;
  color: #2c2;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -352rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding: 30rpx 0;
  font-size: 32rpx;
  color: #333;
  text-align: center;
}

.modal-content {
  height: auto;
  padding: 0 0 30rpx;
}

.modal-radio {
  padding: 30rpx;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 30rpx;
  color: #333;
}

.input {
  width: 90%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  margin: 10rpx 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #ddd;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #fbc647;
  text-align: center;
}

/* 司机状态信息  */

view.driverState {
  width: 95%;
  height: 208rpx;
  margin: 0 auto;
  text-align: center;
  margin-top: 150rpx;
  background-color: #fff;
  border-bottom: 2px solid #f5f1f2;
  border-radius: 5px;
}

view.driverInfo {
  width: 95%;
  height: 188rpx;
  display: flex;
  padding-top: 10px;
  background-color: #fff;
  margin-left: 20rpx;
  position: relative;
  border-radius: 20rpx;
}

view.name, .order_num, .core {
  position: relative;
}

view.core {
  margin-top: 10rpx;
  font-size: 28rpx;
}

view.core image {
  margin: 0 10rpx;
}

view.core image:first-child {
  margin-left: 0;
}

view.name .plate, view.order_num text, view.core .score {
  position: absolute;
  right: 48rpx;
}

view.core .score.noScore {
  left: 0;
}

button.cancleB {
  width: 80%;
  height: 86rpx;
  font-size: 14px;
  line-height: 86rpx;
  color: #f5f1f2;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 10rpx;
  background-color: #161525;
  letter-spacing: 4rpx;
}

button.cancleB::after {
  border: none;
}

/* 订单状态信息*/

.order-state {
  width: 198rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 12px;
  font-weight: normal;
  text-align: center;
  background-color: #161525;
  color: #fff;
  position: fixed;
  top: 20rpx;
  right: 44rpx;
  border-radius: 10rpx;
}

.Orderdetail_details {
  /* display: flex;
  flex-direction: column; */
  width: 95%;
  margin: 0 auto;
  border-radius: 5px;
  padding: 0px 2.5% 5px;
  background-color: #fff;
}

.Orderdetail_details view, .details view {
  font-size: 12px;
  color: #7a7a7a;
}

.order_info {
  padding: 16rpx 0 0;
}

.driver_details {
  /* display: flex;
  flex-direction: column; */
  width: 95%;
  margin: 0 auto;
  border-radius: 5px;
  padding: 0px 2.5% 5px;
  background-color: #fff;
  margin-top: 40rpx;
}

.details {
  margin-top: 40rpx;
  /* display: flex;
  flex-direction: column; */
  width: 95%;
  border-radius: 5px;
  padding: 0px 2.5% 5px;
  background-color: #fff;
}

.driverInfos {
  width: 95%;
  height: 75px;
  display: flex;
  padding-top: 10px;
  background-color: #fff;
  margin-top: 40rpx;
  margin-left: 20rpx;
  position: relative;
}

.Orderdetail_details .service, .driver_details .service, .details .service {
  color: #4b484a;
  font-size: 16px;
  padding: 8px 0px 8px;
  text-align: left;
}

.server_time, .delivery, .price, .refund_fee {
  padding: 8px 0px 8px;
}

.payOrder {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 50px;
  padding: 0;
}

.pay_fee {
  width: 70%;
  height: 100rpx;
  background-color: #fff;
  line-height: 100rpx;
  color: #333;
  font-size: 16px;
  padding-left: 8%;
  position: fixed;
  bottom: 5rpx;
}

/*  评分  */

.star_score {
  width: 50%;
  height: 74rpx;
  margin: 0 auto;
  margin-top: 320rpx;
}

.star-image {
  position: absolute;
  margin-left: 200rpx;
  width: 52rpx;
  height: 52rpx;
  src: "http://mq.mouqukeji.com/static/image/wjx4.png";
}

.item {
  position: absolute;
  top: 0;
  width: 52rpx;
  height: 52rpx;
}

.anonymouscheckbox {
  width: 45%;
  display: inline-block;
  padding-left: 60rpx;
}

.anonymous_checkbox {
  color: #a0a0a0;
  font-size: 26rpx;
}

button.submit {
  width: 80%;
  height: 96rpx;
  line-height: 96rpx;
  color: #fff;
  background-color: #121525;
  margin-top: 64rpx;
  font-size: 28rpx;
  letter-spacing: 4rpx;
}

button.submit::after {
  border: none;
}
