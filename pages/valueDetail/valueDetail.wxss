page{
  background: #eeeeee;
}
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #f5f1f2;
  z-index: 9999;
  top: 0;
  left: 0;
  opacity: 1;
}
.value-detail{
  height: 600rpx;
  margin: 20rpx 20rpx 0;
  background: #ffffff;
}
.value-detail .core{
  margin: 0 auto;
  text-align:center;
  padding-top: 100rpx;
}
.value-detail .core image{
  width: 52rpx;
  height: 52rpx;
  margin-left: 20rpx;
}
.value-detail .degree{
  color: #333333;
  text-align: center;
  font-size: 28rpx;
  padding:20rpx 0 50rpx;
}
.value-detail .content{
  padding: 0 84rpx;
  font-size: 26rpx;
  color: #999999;
}