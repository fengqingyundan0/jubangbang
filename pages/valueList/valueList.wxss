/* pages/valueList/valueList.wxss */

page {
  background: #fff;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #f5f1f2;
  z-index: 9999;
  top: 0;
  left: 0;
  opacity: 1;
}

.valueList .list {
  height: 238rpx;
  margin: 60rpx 20rpx 30rpx;
  border: 2rpx solid #999;
  border-radius: 20rpx;
  background: #fff;
  position: relative;
}

.valueList .list:first-child {
  margin-top: 120rpx;
}

.valueList .list>image {
  width: 84rpx;
  height: 84rpx;
  position: absolute;
  border: 20rpx solid #fff;
  border-radius: 50%;
  top: -60rpx;
  left: 50%;
  transform: translateX(-50%);
}

.valueList .nickname {
  color: #333;
  font-size: 28rpx;
  text-align: center;
  margin-top: 80rpx;
}

.valueList .core {
  display: inline-block;
  text-align: center;
}

.valueList .core image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

.valueList .content {
  margin-top: 34rpx;
  padding: 0 84rpx;
  font-size: 26rpx;
  color: #999;
}
