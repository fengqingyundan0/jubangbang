/**index.wxss**/

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #f5f1f2;
  z-index: 9999;
  top: 0;
  left: 0;
  opacity: 1;
}

.swiper-tab {
  width: 100%;
  height: 80rpx;
  /* border-bottom: 2rpx solid #ccc;    */
  text-align: center;
  line-height: 90rpx;
  position: fixed;
  top: 0;
  z-index: 99;
  background: #f1f2f6;
}

.swiper-tab-list {
  font-size: 28rpx;
  display: inline-block;
  width: 20%;
  height: 62rpx;
  line-height: 71rpx;
  color: #999;
}

.on {
  color: #c2c3c5;
  border-bottom: 5rpx solid #f5051b;
}

.swiper-box {
  display: block;
  width: 100%;
  /* margin-top:45px; *//* background-color: #fff; */
  background: #f1f2f6;
}

.all_orders {
  /* display: flex;
  flex-direction: row; */
  width: 94%;
  /* height: 115px; */
  margin: 10rpx auto 0rpx;
  padding: 10px 0px 10px;
  background: #fff;
  /* border-bottom: 2rpx solid #ccc; */
}

.order_quantity {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}

.order_quantity text {
  font-size: 12px;
  color: #ccc;
  text-align: left;
  line-height: 28px;
}

.sum {
  /* margin-top: 15rpx; */
  height: 23px;
  font-size: 14px;
  /* display: flex;
  flex-direction: row; */
}

.complete {
  display: flex;
  flex-direction: row;
}

.coj {
  position: absolute;
  right: 40px;
  color: #ff8000;
  display: flex;
  flex-direction: row;
}

text {
  font-family: "Microsoft Yahei";
}

.sum .hide {
  display: none;
}

.sum .show {
  display: block;
}

.orderlist {
  flex: auto;
  position: relative;
}

.orderlist scroll-view {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  top: 80rpx;
}
